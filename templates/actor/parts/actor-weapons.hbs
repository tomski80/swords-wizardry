<!-- TO HIT table -->
<h3></h3>

<h3  class="resource-label align-center">{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.RollNeededToHitAC'}}</h3>

<div class="grid grid-19col align-center">
    {{#each system.tohitarmour as |val key|}}
            <div>
              <label for="system.tohitarmour.{{val}}.value" class="nomargin align-center" data-label="{{key}}"> {{key}} </label>
            </div>
           
    {{/each}}
    {{#each system.tohitarmour as |val key|}}
             <div>
              <input class="nomargin align-center" type="text" name="system.tohitarmour.{{key}}" value="{{val}}" data-dtype="Number"/>
            </div>
    {{/each}}
</div>

<br>

<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Name'}}</div>
    <div class='item-name'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Weight'}}</div>
    <div class='item-formula'>{{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.RollFormula'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Create" type='weapon'}}'
        data-type='weapon'
      >
        <i class='fas fa-plus'></i>
        {{localize 'SWORDS_WIZARDRY.CharacterSheet.Combat.Table.New' type='weapon'}}
      </a>
    </div>
  </li>
  {{#each weapons as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <h4>{{item.name}}</h4>
      </div>
      <div class='item-prop'>{{item.system.weight}}</div>

      <div class='item-formula item-prop'>{{item.system.formula}}</div>
      <div class='item-damage item-prop'>{{item.system.hitdamage}}</div>
      <div class='item-controls'>
        <a
          class='item-control item-edit'
          title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Update" type='weapon'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "SWORDS_WIZARDRY.CharacterSheet.Combat.Table.Delete" type='weapon'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>

